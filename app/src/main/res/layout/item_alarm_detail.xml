<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="12dp"
        android:background="#eeeff1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/opponent_profile_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_profile"
        android:scaleType="centerCrop"
        android:src="@drawable/main_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:text="Delete 경기"
        android:textColor="@color/black_text"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/opponent_profile_iv"
        app:layout_constraintTop_toBottomOf="@id/view_divider" />

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="<2023-03-16> 오전03:03\n김성인(인대파열)님이 참여 요청을 보넀습니다."
        android:textColor="@color/black_text"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/opponent_profile_iv"
        app:layout_constraintTop_toBottomOf="@id/title_tv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/opponent_profile_btn"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/solid_button"
        android:text="상대 프로필"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/agree_btn"
        app:layout_constraintStart_toStartOf="@id/content_tv"
        app:layout_constraintTop_toBottomOf="@id/content_tv"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/agree_btn"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/solid_button"
        android:text="수락"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/disagree_btn"
        app:layout_constraintStart_toEndOf="@id/opponent_profile_btn"
        app:layout_constraintTop_toBottomOf="@id/content_tv"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/disagree_btn"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/solid_button"
        android:text="거절"
        android:layout_marginEnd="35dp"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/agree_btn"
        app:layout_constraintTop_toBottomOf="@id/content_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>